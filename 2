#include <iostream>

int main() {
    int n;
    bool isPrime = true;

    std::cout << "Введите целое число n: ";
    std::cin >> n;

    if (n < 2) {
        isPrime = false;
    } else {
        for (int i = 2; i < n; ++i) {
            if (n % i == 0) {
                isPrime = false;
                break;
            }
        }
    }

    if (isPrime) {
        std::cout << n << " является простым числом." << std::endl;
    } else {
        std::cout << n << " не является простым числом." << std::endl;
    }

    return 0;
}

