#include <iostream>

int main() {
    int n;
    long long factorial = 1;
    std::cout << "Введите целое число n: ";
    std::cin >> n;

    if (n < 0) {
        std::cout << "Факториал не определен для отрицательных чисел." << std::endl;
    } else {
        int i = 1;
        while (i <= n) {
            factorial *= i;
            i++;
        }
        std::cout << "Факториал " << n << " равен " << factorial << "." << std::endl;
    }

    return 0;
}

